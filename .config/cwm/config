unbind-key   all
unbind-mouse all

sticky yes

bind-key 4S-r     restart
bind-key 4S-q     quit
bind-key 4-Return "urxvtc"

bind-key 4-w menu-window
bind-key 4-d "dmenu_run -fn 'Iosevka Slab:size=10'"
bind-key 4-e "emacsclient -ca ''"

bind-key 4-Tab group-last
bind-key 4-1   group-only-1
bind-key 4-2   group-only-2
bind-key 4-3   group-only-3
bind-key 4-4   group-only-4
bind-key 4-5   group-only-5
bind-key 4-6   group-only-6
bind-key 4-7   group-only-7
bind-key 4-8   group-only-8
bind-key 4-9   group-only-9

bind-key 4-x  window-fullscreen
bind-key 4-q  window-close
bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4S-7 window-movetogroup-7
bind-key 4S-8 window-movetogroup-8
bind-key 4S-9 window-movetogroup-9

bind-mouse 4-1 window-move
bind-mouse 4-3 window-resize
bind-mouse 3   menu-cmd

command Terminal urxvtc
command Chrome   chrome
command Emacs    "emacsclient -ca ''"
command Calc     xcalc
command Telegram telegram-desktop
command Slock    slock

bind-key 4-F9  "amixer sset Master toggle"
bind-key 4-F10 "mpc toggle"
bind-key 4-F11 "amixer sset Master 5%-"
bind-key 4-F12 "amixer sset Master 5%+"

bind-key Print   "shot s"
bind-key 4-Print "shot a"

borderwidth 3
color activeborder   "#000000"
color inactiveborder "#ffffff"
fontname             "Iosevka Slab:size=10"

ignore dunst
